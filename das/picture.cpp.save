#include "TXLib.h"

struct Picture
{
    int x;
    int y;
    string adress;
    HDC pic;
    int w_scr;
    int h_scr;
    int w;
    int h;
    bool visible;
    string category;

    /*void adress()
    {
        setlocale(LC_ALL, "Russian");

        int pos1 = adress.find(' " ');
        int pos2 = adress.find(' " ', pos1+1);
        string category = adress.substr(0, pos2);
    }*/


    void draw()
    {
        if(visible)
        {
            Win32::TransparentBlt (txDC(), x, y, w_scr, h_scr, pic, 0, 0, w, h, TX_WHITE);
        }
    }

    bool click()
    {
        return( txMouseButtons() == 1 &&
                txMouseX() >= x && txMouseX() <= x+w_scr &&
                txMouseY() >= y && txMouseY() <= y+h_scr);
    }
};

